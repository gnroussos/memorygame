    <Grid Background="#FF4F99D6">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="160"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- The title for the game -->
        <Grid Grid.ColumnSpan="2">
            <RichTextBlock FontFamily="Freestyle Script" FontWeight="Bold" FontSize="90"
                           TextAlignment="Center" Foreground="Green" VerticalAlignment="Center">
                <Paragraph>
                    <Run Text="Secret ZOO!"/>
                </Paragraph>
            </RichTextBlock>
        </Grid>

        <!-- Game controls-->
        <Grid Grid.Row="1" Grid.RowSpan="2" Background="#FF4F99D6">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            
            <StackPanel x:ConnectionId='55' x:Name="ButtonPanel" Grid.Row="0">
                <Button x:ConnectionId='64' x:Name="StartButton" Content="Start" FontSize="32" BorderBrush="Black" Height="90" Width="150" Margin="0,80,0,0"
                        HorizontalAlignment="Center" Foreground="#FF0B2F6E"                            >
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                            <GradientStop Color="white" Offset="1"/>
                            <GradientStop Color="#FF3B68B8"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <!--<StackPanel x:Name="ButtonPanel" Grid.Row="1" Margin="0,0,0,190">-->
                <Button x:ConnectionId='65' x:Name="HowToButton" Content="How to Play" FontSize="24" Foreground="#FF0B2F6E"
                    BorderBrush="Black" Height="90" Width="150" HorizontalAlignment="Center" Margin="0,50,0,0"                            >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#FF3B68B8" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>

                </Button>
            </StackPanel>

            <StackPanel x:ConnectionId='56' x:Name="statsArea" Grid.Row="1" VerticalAlignment="Bottom">
                <TextBlock Margin="10,0,0,10" Foreground="Black" FontSize="32"  TextWrapping="Wrap" >
                        <Run x:ConnectionId='62' x:Name="triesBox" Text="Tries: " />
                        <Run x:ConnectionId='63' x:Name="triesText" Text="0" />
                </TextBlock>
                <TextBlock x:ConnectionId='57' x:Name="gameoverStats" Margin="10,0,0,70" Foreground="Black" FontSize="26" TextWrapping="Wrap" Opacity="1" >
                    	<Run x:ConnectionId='58' x:Name="scoreBox" Text="Your score: "/>
                        <Run x:ConnectionId='59' x:Name="scoreText" Text=""/>
                    	<LineBreak/>
                    	<Run x:ConnectionId='60' x:Name="timeBox" Text="Your Time: "/>
                        <Run x:ConnectionId='61' x:Name="timeText" Text=""/>
                </TextBlock>
            </StackPanel>

        </Grid>

        <!-- Message area -->
        <Grid x:ConnectionId='2' x:Name="messageArea" Grid.Column="1" Grid.Row="2" Background="#FF4F99D6">
            <RichTextBlock x:ConnectionId='52' x:Name="winMessage" FontFamily="Freestyle Script" Foreground="Green"
                           FontWeight="Bold" FontSize="90" TextAlignment="Center" Opacity="0">
                <Paragraph>
                    <Run Text="YOU WIN!!!"/>
                </Paragraph>
            </RichTextBlock>

            <RichTextBlock x:ConnectionId='53' x:Name="startMsg" FontSize="90" Foreground="Green" TextAlignment="Center" >
                <Paragraph>
                    <Run Text="Press start!!!"/>
                </Paragraph>
            </RichTextBlock>

            <RichTextBlock x:ConnectionId='54' x:Name="playMessage" Style="{StaticResource RulesText}">
                <Paragraph FontFamily="Felix Titling" FontSize="28" FontWeight="Normal" Foreground="Green">
                    <Run Text="How to Play:"/>
                </Paragraph>
                <Paragraph>
                    <Run Text="Find all the pairs of matching cards "/>
                    <Run Text="by turning up two at a time."/>
                </Paragraph>
                <Paragraph>
                    <Run Text="If two cards don't match, click either to turn them back over."/>
                </Paragraph>
                <Paragraph >
                    <Run Text="Click the Start button for a new game."/>
                </Paragraph>
            </RichTextBlock>
        </Grid>
      
